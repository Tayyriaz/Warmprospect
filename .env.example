# Required
GEMINI_API_KEY=your_gemini_api_key_here
ADMIN_API_KEY=your_admin_api_key_here

# Database (for Docker, use the service name)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/goaccel_db

# Redis (for Docker, use the service name)
REDIS_URL=redis://redis:6379/0

# Optional - Application Settings
GEMINI_MODEL=gemini-2.5-flash
MAX_HISTORY_TURNS=20
PORT=8000
ALLOWED_ORIGINS=["*"]
DEFAULT_APPOINTMENT_LINK=https://calendly.com/example

# Optional - Scraping Configuration
SCRAPING_MAX_DEPTH=5
SCRAPING_MAX_PAGES=500
SCRAPING_MAX_SECONDS=600
SCRAPING_MAX_LINKS_PER_PAGE=30
SCRAPING_MAX_QUEUE_SIZE=1000

# Optional - RAG Configuration
RAG_CHUNK_SIZE=800
RAG_CHUNK_OVERLAP=100
GEMINI_EMBED_MODEL=text-embedding-004
GEMINI_CATEGORIZATION_MODEL=gemini-2.5-flash
